<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-01") %>
    <%= h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-01") %>
  </h2>
  <%= calendar_for @microposts, :year => @date.year, :month => @date.month do |calendar| %>
  <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')%>
    <% calendar.day(:day_method => :date) do |date, microposts| %>
      <%= date.day %>
      <ul id="calendar">
        <% for micropost in microposts %>
          <% if micropost != microposts[microposts.count - 1] %>
          <li id="next"><%= link_to h(micropost.acts), micropost %></li>
          <% else %>
          <li><%= link_to h(micropost.acts), micropost %></li>
          <% end %>
    <% end %>
  </ul>
  <% end %>
  <% end %>
</div>