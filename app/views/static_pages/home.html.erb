<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    
    <div class="span8">
      <h3>UPCOMING SHOWS</h3>
      <%= render 'shared/feed' %>
    </div>
    <div class="span8">
      <h3>PAST SHOWS</h3>
      <%= render 'shared/past' %>
    </div>
  </div>  
<% else %>
<ul class="nav nav-tabs">
  <li><a href="#upcoming" data-toggle="tab">UPCOMING SHOWS</a></li>
  <li><a href="#past" data-toggle="tab">PAST SHOWS</a></li>
</ul>
 
<div class="tab-content">
  <div class="tab-pane active" id="upcoming"><%= render 'shared/feed' %></div>
  <div class="tab-pane" id="past"><%= render 'shared/past' %></div>
</div>
 
<script>
$('#upcoming').tab('show')
  $(function () {
    $('.tabs a:last').tab('show')
  })
</script>  

  </div>
<% end %>