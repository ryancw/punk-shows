<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6">
  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
      <br />
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

<div class="offset 6">
      <div class="btn-off"><%= cancel_link %></div> <%= f.submit "Save changes", :class => "btn btn-large btn-primary" %>
      
      </div>

    <% end %>
       
  </div>
</div>